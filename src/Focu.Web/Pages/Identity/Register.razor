@page "/register"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Focu - Register</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="img/focu.png" alt="Focu - Financial Control Utility" width="200">
            </div>
            
            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />
                
                <MudTextField 
                    T="string" 
                    Label="E-mail"
                    HelperText="Required"
                    InputType="InputType.Email"
                    For="@(() => InputModel.Email)"
                    @bind-Value="@InputModel.Email"
                />

                <MudTextField
                    T="string"
                    Label="Password"
                    HelperText="Required"
                    InputType="InputType.Password"
                    For="@(() => InputModel.Password)"
                    @bind-Value="@InputModel.Password"
                />

                <div class="d-flex mt-8 justify-center">
                    @if (IsBusy){
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else {
                        <MudButton Color="Color.Primary" Variant="Variant.Filled" ButtonType="ButtonType.Submit">
                            Register
                        </MudButton>

                        <MudSpacer />

                        <MudButton Href="/login">
                            Already have an account?
                        </MudButton>
                    }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>